import mdesl.graphics.TextureRegion;

public class Tile {
	
	private int width = 128;
	private int height = 128;
	private int lineno;
	private int vno;
	public Texture TileSet;
	private SpriteBatch draw;
	
	public Tile(int lineno, int vno, SpriteBatch draw){
		this.lineno = lineno;
		this.vno = vno;
		this.draw = draw;
		try {
			this.TileSet = new Texture(this.draw.getResource("testImage.png"));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
