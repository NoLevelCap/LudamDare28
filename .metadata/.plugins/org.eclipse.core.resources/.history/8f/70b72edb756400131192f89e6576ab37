package com.nolevelcap.world;

import java.util.ArrayList;

import com.nolevelcap.main.ResourceLoader;

import mdesl.graphics.SpriteBatch;

public class World {
	
	private ArrayList<Tile> Tiles;
	private SpriteBatch draw;
	private ResourceLoader resourceLoader;
	
	public World(SpriteBatch draw, ResourceLoader resourceLoader){
		this.draw = draw;
		this.resourceLoader = resourceLoader;
		create();
	}
	
	public void render(){
		draw.begin();
		for (Tile t: Tiles){
			t.render(draw);
		}
		draw.end();
	}
	
	public void logic(){
		
	}
	
	public void create(){
		for(int vno = 0; vno<= 9; vno++){
			for(int lineno = 0; lineno<= 6; lineno++){
				Tile tile = new GrassTile(lineno, vno, resourceLoader);
				Tiles.add(tile);
			}
		}
	}
}
