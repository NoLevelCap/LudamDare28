package com.nolevelcap.player.info;

import mdesl.graphics.SpriteBatch;
import mdesl.graphics.Texture;
import mdesl.graphics.TextureRegion;

public class Power {

	public TextureRegion texture;
	public int id, lvl;
	
	public Power(int id, int lvl, Texture source){
		texture = new TextureRegion(source, 0, 0, 32, 32);
		this.id = id;
		this.lvl = lvl;
	}
	
	public void init(){}

	public void render(SpriteBatch draw, int ox, int oy) {
		draw.draw(texture, id*64, oy+lvl*64, 64, 64);
	}
}
