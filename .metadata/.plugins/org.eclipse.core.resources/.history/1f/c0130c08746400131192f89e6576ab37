package com.nolevelcap.world;

import java.util.ArrayList;

import mdesl.graphics.SpriteBatch;

public class World {
	
	private ArrayList<Tile> Tiles;
	private SpriteBatch draw;
	
	public World(SpriteBatch draw){
		this.draw = draw;
	}
	
	public void render(){
		draw.begin();
		for (Tile t: Tiles){
			t.render();
		}
		draw.end();
	}
	
	public void logic(){
		
	}
	
	public void create(){
		for(int vno = 0; vno<= 9; vno++){
			for(int lineno = 0; lineno<= 6; lineno++){
				Tile tile = new GrassTile(lineno, vno);
				Tiles.add(tile);
			}
		}
	}
}
